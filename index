    <script>
        // --- DATA ENGINE ---
        const CARDS = [
            { id: 0, name: "The Fool", arc: "Major", icon: "ðŸƒ", up: "New beginnings, optimism, trust.", rev: "Recklessness, risk-taking, folly." },
            { id: 1, name: "The Magician", arc: "Major", icon: "ðŸª„", up: "Power, manifestation, resourcefulness.", rev: "Manipulation, poor planning, untapped talent." },
            { id: 2, name: "The High Priestess", arc: "Major", icon: "ðŸŒ™", up: "Intuition, sacred knowledge, subconscious.", rev: "Secrets, disconnected from intuition." },
            { id: 3, name: "The Empress", arc: "Major", icon: "ðŸŒ¿", up: "Nature, abundance, femininity.", rev: "Creative block, dependence." },
            { id: 4, name: "The Emperor", arc: "Major", icon: "ðŸ‘‘", up: "Authority, structure, solid foundation.", rev: "Domination, rigidity, coldness." },
            { id: 5, name: "The Hierophant", arc: "Major", icon: "ðŸ›ï¸", up: "Tradition, conformity, spiritual wisdom.", rev: "Personal beliefs, challenging status quo." },
            { id: 6, name: "The Lovers", arc: "Major", icon: "â¤ï¸", up: "Love, harmony, choices, alignment.", rev: "Self-love, disharmony, misalignment." },
            { id: 7, name: "The Chariot", arc: "Major", icon: "âš”ï¸", up: "Direction, control, victory, will.", rev: "Lack of control, aggression, self-discipline." },
            { id: 8, name: "Strength", arc: "Major", icon: "ðŸ¦", up: "Courage, persuasion, influence.", rev: "Inner strength, self-doubt, low energy." },
            { id: 9, name: "The Hermit", arc: "Major", icon: "ðŸ®", up: "Soul-searching, introspection, guidance.", rev: "Isolation, loneliness, withdrawal." },
            { id: 10, name: "Wheel of Fortune", arc: "Major", icon: "ðŸŽ¡", up: "Good luck, karma, destiny, turning point.", rev: "Bad luck, resistance to change." },
            { id: 11, name: "Justice", arc: "Major", icon: "âš–ï¸", up: "Truth, fairness, cause and effect.", rev: "Unfairness, lack of accountability." },
            { id: 12, name: "The Hanged Man", arc: "Major", icon: "ðŸ‘£", up: "Pause, surrender, new perspective.", rev: "Delays, resistance, stalling." },
            { id: 13, name: "Death", arc: "Major", icon: "ðŸ’€", up: "Endings, change, transformation.", rev: "Resistance to change, personal transition." },
            { id: 14, name: "Temperance", arc: "Major", icon: "ðŸ·", up: "Balance, moderation, patience.", rev: "Imbalance, excess, self-healing." },
            { id: 15, name: "The Devil", arc: "Major", icon: "ðŸ”¥", up: "Attachment, addiction, shadow self.", rev: "Releasing limiting beliefs, detachment." },
            { id: 16, name: "The Tower", arc: "Major", icon: "âš¡", up: "Sudden change, upheaval, revelation.", rev: "Personal transformation, averting disaster." },
            { id: 17, name: "The Star", arc: "Major", icon: "âœ¨", up: "Hope, faith, renewal, purpose.", rev: "Lack of faith, despair, self-trust." },
            { id: 18, name: "The Moon", arc: "Major", icon: "ðŸŒ’", up: "Fear, anxiety, illusion, subconscious.", rev: "Release of fear, repressed emotion." },
            { id: 19, name: "The Sun", arc: "Major", icon: "â˜€ï¸", up: "Positivity, fun, warmth, vitality.", rev: "Inner child, feeling down." },
            { id: 20, name: "Judgement", arc: "Major", icon: "ðŸŽº", up: "Judgement, rebirth, inner calling.", rev: "Self-doubt, inner critic." },
            { id: 21, name: "The World", arc: "Major", icon: "ðŸŒ", up: "Completion, accomplishment, travel.", rev: "Seeking closure, short-cuts." }
        ];

        // Minor Arcana Generation
        ["Wands", "Cups", "Swords", "Pentacles"].forEach((s, si) => {
            ["Ace", "2", "3", "4", "5", "6", "7", "8", "9", "10", "Page", "Knight", "Queen", "King"].forEach((r, ri) => {
                CARDS.push({ id: 22+(si*14)+ri, name: `${r} of ${s}`, arc: "Minor", icon: "âœ¨", up: `Positive ${s.toLowerCase()} energy.`, rev: `Internal ${s.toLowerCase()} struggle.` });
            });
        });

        // --- APP ENGINE ---
        const ui = {
            current: 'home',
            spread: [],

            render(view) {
                this.current = view;
                const root = document.getElementById('app-content');
                const title = document.getElementById('view-title');
                
                // Active nav state
                document.querySelectorAll('nav div').forEach(el => el.classList.remove('tab-active'));
                document.getElementById(`nav-${view}`).classList.add('tab-active');

                root.innerHTML = '';
                if (view === 'home') {
                    title.innerText = 'Oracle';
                    root.innerHTML = `
                        <div class="flex flex-col items-center pt-10 text-center animate-ios">
                            <div class="w-24 h-24 bg-gradient-to-tr from-amber-500 to-amber-200 rounded-[22px] shadow-lg flex items-center justify-center mb-8">
                                <span class="text-5xl">ðŸ”®</span>
                            </div>
                            <h2 class="text-4xl font-mystic font-bold mb-4">Divine Oracle</h2>
                            <p class="text-[#8e8e93] px-8 text-[15px] mb-10 leading-snug">Seek clarity from the cards. Discover what the universe has in store for you today.</p>
                            <button onclick="ui.draw()" class="w-full bg-[#007aff] h-14 rounded-2xl font-semibold active:opacity-70 transition-opacity">Start Reading</button>
                        </div>
                    `;
                } else if (view === 'reading') {
                    title.innerText = 'Daily Spread';
                    if (this.spread.length === 0) {
                        root.innerHTML = `<div class="pt-40 text-center text-[#8e8e93] animate-ios">No active reading.<br/><span onclick="ui.draw()" class="text-[#007aff] font-bold mt-4 block">Shuffle Cards</span></div>`;
                    } else {
                        root.innerHTML = `<div class="space-y-12 pb-20">
                            ${this.spread.map((c, i) => `
                                <div class="flex flex-col items-center animate-ios" style="animation-delay: ${i*0.1}s">
                                    <span class="text-[10px] uppercase font-bold text-amber-500/60 tracking-[2px] mb-4">${['Past', 'Present', 'Future'][i]}</span>
                                    <div onclick="ui.openModal(${c.id}, ${c.rev})" class="w-48 h-72 bg-[#1c1c1e] rounded-2xl border border-white/10 shadow-xl flex flex-col items-center justify-center p-6 active:scale-95 transition-transform ${c.rev ? 'reversed' : ''}">
                                        <div class="text-6xl mb-4">${c.icon}</div>
                                        <h3 class="font-mystic text-amber-100 text-lg">${c.name}</h3>
                                    </div>
                                    <p class="mt-4 px-10 text-center text-sm text-[#8e8e93] italic leading-relaxed">"${c.rev ? c.meaningRev : c.meaningUp}"</p>
                                </div>
                            `).join('')}
                        </div>`;
                    }
                } else if (view === 'deck') {
                    title.innerText = 'The Library';
                    root.innerHTML = `<div class="grid grid-cols-3 gap-3 animate-ios">
                        ${CARDS.map(c => `<div onclick="ui.openModal(${c.id}, false)" class="aspect-[2/3] bg-[#1c1c1e] rounded-xl border border-white/5 flex flex-col items-center justify-center p-2 active:opacity-50 transition-opacity">
                            <span class="text-2xl mb-1">${c.icon}</span>
                            <span class="text-[9px] uppercase text-[#8e8e93] truncate w-full text-center">${c.name}</span>
                        </div>`).join('')}
                    </div>`;
                }
            },

            draw() {
                this.spread = [...CARDS]
                    .sort(() => Math.random() - 0.5)
                    .slice(0, 3)
                    .map(c => ({
                        ...c,
                        rev: Math.random() > 0.7,
                        meaningUp: c.up,
                        meaningRev: c.rev
                    }));
                this.render('reading');
            },

            openModal(id, isRev) {
                const card = CARDS.find(c => c.id === id);
                const inner = document.getElementById('sheet-inner');
                inner.innerHTML = `
                    <div class="flex flex-col items-center pt-2">
                        <div class="w-32 h-48 bg-gradient-to-b from-[#2c2c2e] to-[#1c1c1e] rounded-xl flex flex-col items-center justify-center border border-white/10 mb-8 ${isRev ? 'reversed' : ''}">
                            <span class="text-4xl mb-2">${card.icon}</span>
                            <span class="text-[10px] font-mystic text-amber-200">${card.name}</span>
                        </div>
                        <div class="w-full space-y-6">
                            <div>
                                <h4 class="text-[#007aff] text-[11px] font-bold uppercase tracking-widest mb-2">Upright</h4>
                                <p class="text-[17px] leading-tight text-white/90">"${card.up}"</p>
                            </div>
                            <div class="pt-4 border-t border-white/5">
                                <h4 class="text-[#ff3b30] text-[11px] font-bold uppercase tracking-widest mb-2">Reversed</h4>
                                <p class="text-[17px] leading-tight text-white/90">"${card.rev}"</p>
                            </div>
                        </div>
                        <button onclick="ui.closeModal()" class="w-full mt-10 h-14 bg-[#2c2c2e] rounded-xl font-bold text-white active:bg-[#3a3a3c]">Dismiss</button>
                    </div>
                `;
                document.getElementById('overlay').classList.remove('hidden');
                document.getElementById('sheet').classList.add('active');
            },

            closeModal() {
                document.getElementById('overlay').classList.add('hidden');
                document.getElementById('sheet').classList.remove('active');
            }
        };

        window.onload = () => ui.render('home');
    </script>
</body>
