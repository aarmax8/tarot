                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/></svg>
                <span class="text-[10px] font-medium">Home</span>
            </div>
            <div onclick="ui.render('reading')" id="nav-reading" class="flex flex-col items-center gap-1 text-[#8e8e93] cursor-pointer active:opacity-50 transition-opacity">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2"/><path d="M3 9h18"/></svg>
                <span class="text-[10px] font-medium">Reading</span>
